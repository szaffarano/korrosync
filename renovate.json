{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "matchStrings": [
        "ZIG_VERSION=\"?(?<currentValue>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "ziglang/zig",
      "extractVersionTemplate": "^(?<version>.*)$"
    }
  ]
}
